<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:padding="10dip"
  >
  <EditText
    android:text=""
    android:id="@+id/editTwitterUserID"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:hint="@string/ui_twitter_userid_hint"
    android:inputType="text"
    style="@style/TextStyle"
  />
  <LinearLayout
    android:id="@+id/layoutPassword"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <EditText
      android:text=""
      android:id="@+id/editTwitterPassword"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:hint="@string/ui_twitter_password_hint"
      android:inputType="textPassword"
      style="@style/TextStyle"
    />
    <TextView
      android:text="@string/ui_twitter_authorized_text"
      android:id="@+id/textAuthorized"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:visibility="gone"
      style="@style/TextStyle"
    />
  </LinearLayout>
  <TextView
    android:text="@string/ui_twitter_description_text"
    android:id="@+id/textTwitterDescription"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    style="@style/TextStyle"
  />
  <LinearLayout
    android:id="@+id/layoutFotter"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
      android:text="@string/ui_twitter_auth_button_text"
      android:id="@+id/btnAuth"
      android:layout_weight="1"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      style="@style/TextStyle"
    />
    <Button
      android:text="@string/ui_twitter_unauth_button_text"
      android:id="@+id/btnUnauth"
      android:layout_weight="1"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:visibility="gone"
      style="@style/TextStyle"
    />
    <Button
      android:text="@string/ui_twitter_cancel_button_text"
      android:id="@+id/btnCancel"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      style="@style/TextStyle"
    />
  </LinearLayout>
</LinearLayout>
